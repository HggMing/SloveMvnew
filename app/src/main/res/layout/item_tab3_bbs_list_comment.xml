<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="10dp">

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="6dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/font_black_4"
        android:textSize="15sp"
        tools:text="我就是爱音乐，莫叫我停下来！良辰美景奈何天，千里长征人未还。。" />

    <com.bilibili.magicasakura.widgets.TintTextView
        android:id="@+id/comment_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_content"
        android:textColor="@color/theme_color_primary"
        android:textSize="12sp"
        tools:text="爱我你怕了吗？" />

    <TextView
        android:id="@+id/comment_ctime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/comment_uname"
        android:drawableLeft="@mipmap/ic_clock"
        android:drawablePadding="5dp"
        android:textColor="@color/font_black_8"
        android:textSize="12sp"
        tools:text="1分钟前" />

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/comment_uname"
        android:layout_marginTop="5dp"
        android:background="@mipmap/divide_shade_up" />
</RelativeLayout>
