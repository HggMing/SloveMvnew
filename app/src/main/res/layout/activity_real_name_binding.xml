<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".tab4.safesetting.RealNameBindingActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:ignore="ContentDescription">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_face"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_notice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="请拍摄一张正面免冠照片"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/takelayout_face"
                    android:layout_width="180dp"
                    android:layout_height="240dp"
                    android:layout_below="@id/tv_notice1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_takephoto_bg"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/btn_face"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/button_takephoto" />

                    <ImageView
                        android:id="@+id/img_face"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_faceretake"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignBottom="@id/takelayout_face"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginLeft="-25dp"
                    android:layout_toRightOf="@id/takelayout_face"
                    android:background="@drawable/button_retakephoto"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_id_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:paddingTop="10dp">


                <TextView
                    android:id="@+id/tv_notice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="请拍摄一张身份证正面照片"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/takelayout_id_card"
                    android:layout_width="285dp"
                    android:layout_height="180dp"
                    android:layout_below="@id/tv_notice2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_takephoto_bg"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/btn_id_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/button_takephoto" />

                    <ImageView
                        android:id="@+id/img_id_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_idretake"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignBottom="@id/takelayout_id_card"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginLeft="-25dp"
                    android:layout_toRightOf="@id/takelayout_id_card"
                    android:background="@drawable/button_retakephoto"
                    android:visibility="gone" />
            </RelativeLayout>

            <com.bilibili.magicasakura.widgets.TintEditText
                android:id="@+id/et_id_num"
                style="@style/EditTextStyle_id_card" />

            <com.bilibili.magicasakura.widgets.TintButton
                android:id="@+id/btn_ok"
                style="@style/ButtonStyle_1"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>