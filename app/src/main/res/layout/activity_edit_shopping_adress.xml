<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.ming.slove.mvnew.tab4.mysetting.shoppingaddress.EditShoppingAdressActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:orientation="vertical">

            <com.bilibili.magicasakura.widgets.TintTextView
                style="@style/TextViewStyle_hint"
                android:layout_marginTop="25dp"
                android:text="收件人姓名" />

            <com.bilibili.magicasakura.widgets.TintEditText
                android:id="@+id/et_name"
                style="@style/EditTextStyle_common"
                android:hint="请填写真实姓名"
                android:maxLength="10" />

            <com.bilibili.magicasakura.widgets.TintTextView
                style="@style/TextViewStyle_hint"
                android:text="收货地址" />

            <com.bilibili.magicasakura.widgets.TintEditText
                android:id="@+id/et_address"
                style="@style/EditTextStyle_common"
                android:hint="请输入收货地址" />

            <com.bilibili.magicasakura.widgets.TintTextView
                style="@style/TextViewStyle_hint"
                android:text="手机号" />

            <com.bilibili.magicasakura.widgets.TintEditText
                android:id="@+id/et_phone"
                style="@style/EditTextStyle_phone"
                android:hint="收件人手机号码，11位数字" />

            <com.bilibili.magicasakura.widgets.TintTextView
                style="@style/TextViewStyle_hint"
                android:text="邮政编码" />

            <com.bilibili.magicasakura.widgets.TintEditText
                android:id="@+id/et_code"
                style="@style/EditTextStyle_phone"
                android:hint="请输入邮政编码，6位数字"
                android:inputType="number"
                android:maxLength="6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical">

                <com.bilibili.magicasakura.widgets.TintTextView
                    style="@style/TextViewStyle_hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:text="设为默认收货地址" />

                <com.bilibili.magicasakura.widgets.TintCheckBox
                    android:id="@+id/check_default"
                    style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:compoundButtonTint="@color/selector_compound" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
