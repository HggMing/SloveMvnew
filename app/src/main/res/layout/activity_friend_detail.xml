<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tab2.frienddetail.FriendDetailActivity"
    tools:ignore="ContentDescription">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divide">

        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <include layout="@layout/divide_15_top_bottom" />

            <RelativeLayout
                android:id="@+id/click_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:foreground="?attr/selectableItemBackground"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/icon_head"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/user_detail_sharow"
                    tools:src="@mipmap/icon" />


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_toRightOf="@id/icon_head"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/font_black_4"
                        android:textSize="18sp"
                        tools:drawableRight="@mipmap/ic_sex_boy"
                        tools:text="备注名" />


                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@id/icon_head"
                    android:layout_toRightOf="@id/icon_head"
                    android:textSize="14sp"
                    tools:text="昵称：哈哈哈" />
            </RelativeLayout>

            <View
                android:id="@+id/divide_remarks"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divide_section_15"
                android:background="@mipmap/divide_15_top_bottom" />

            <RelativeLayout
                android:id="@+id/fd_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_selector"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:minHeight="48dp"
                android:padding="@dimen/padding_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置备注"
                    android:textColor="@color/font_black_2"
                    android:textSize="16sp" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/user_home_arrow" />
            </RelativeLayout>

            <include layout="@layout/divide_15_top_bottom" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/fd_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:padding="@dimen/padding_15">

                    <TextView
                        android:id="@+id/tv_adress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地区"
                        android:textColor="@color/font_black_2"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/arrow4"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/user_home_arrow"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/get_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_toLeftOf="@id/arrow4"
                        android:layout_toRightOf="@id/tv_adress"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:textColor="@color/font_black_8"
                        android:textSize="16sp"
                        tools:text="一二三四五六七八九十一二三四五六" />
                </RelativeLayout>

                <include layout="@layout/divide_1_12" />

                <RelativeLayout
                    android:id="@+id/fd_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:padding="@dimen/padding_15">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人动态"
                        android:textColor="@color/font_black_2"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/arrow1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/user_home_arrow"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/fd_photos_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_toLeftOf="@id/arrow1"
                        android:layout_toRightOf="@id/tv_name">

                        <ImageView
                            android:id="@+id/fd_photo0"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            tools:src="@mipmap/icon" />

                        <ImageView
                            android:id="@+id/fd_photo1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            tools:src="@mipmap/icon" />

                        <ImageView
                            android:id="@+id/fd_photo2"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            tools:src="@mipmap/icon" />

                        <ImageView
                            android:id="@+id/fd_photo3"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            tools:src="@mipmap/icon" />
                    </LinearLayout>
                </RelativeLayout>

                <include layout="@layout/divide_1_12" />

                <RelativeLayout
                    android:id="@+id/fd_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:padding="@dimen/padding_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:textColor="@color/font_black_2"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/user_home_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <include layout="@layout/divide_15_top" />

            <RelativeLayout
                android:id="@+id/fd_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/divide"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <com.bilibili.magicasakura.widgets.TintButton
                    android:id="@+id/btn_send"
                    style="@style/ButtonStyle_1"
                    android:text="发消息" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>