<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/news_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/font_black_4"
            android:textSize="18sp"
            tools:text="你绝对不会想吃的零食大盘点！我怎么好像看到了蟋蟀？！" />

        <TextView
            android:id="@+id/news_ctime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_main_title"
            android:drawableLeft="@mipmap/ic_clock"
            android:drawablePadding="5dp"
            android:textColor="@color/font_black_8"
            android:textSize="14sp"
            tools:text="2016-06-18 11:11" />

        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="invisible"
            android:layout_below="@id/news_ctime"
            android:layout_marginTop="6dp"
            android:background="@mipmap/divide_shade_up" />
    </RelativeLayout>
</RelativeLayout>
