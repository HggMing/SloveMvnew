<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:orientation="vertical">

            <com.bilibili.magicasakura.widgets.TintTextView
                style="@style/TextViewStyle_hint"
                android:layout_marginTop="25dp"
                android:text="姓名" />

            <com.bilibili.magicasakura.widgets.TintEditText
                android:id="@+id/et_name"
                style="@style/EditTextStyle_common"
                android:hint="请输入姓名" />

            <com.bilibili.magicasakura.widgets.TintTextView
                style="@style/TextViewStyle_hint"
                android:text="性别" />

            <com.ming.slove.mvnew.common.widgets.MySpinner
                android:id="@+id/my_sp_sex"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.bilibili.magicasakura.widgets.TintTextView
                style="@style/TextViewStyle_hint"
                android:text="职位" />

            <com.bilibili.magicasakura.widgets.TintEditText
                android:id="@+id/et_job"
                style="@style/EditTextStyle_common"
                android:hint=" 请输入职位信息" />
            <com.bilibili.magicasakura.widgets.TintTextView
                style="@style/TextViewStyle_hint"
                android:text="政治面貌" />

            <com.ming.slove.mvnew.common.widgets.MySpinner
                android:id="@+id/my_sp_zzmm"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content" />
            <com.bilibili.magicasakura.widgets.TintTextView
                style="@style/TextViewStyle_hint"
                android:text="电话" />

            <com.bilibili.magicasakura.widgets.TintEditText
                android:id="@+id/et_phone"
                style="@style/EditTextStyle_common"
                android:inputType="number"
                android:hint=" 请输入电话号码" />

            <com.bilibili.magicasakura.widgets.TintTextView
                style="@style/TextViewStyle_hint"
                android:text="图片" />

            <FrameLayout
                android:id="@+id/layout_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_picture"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/white_pressed1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/img_add"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:src="@mipmap/fab_add" />
            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
