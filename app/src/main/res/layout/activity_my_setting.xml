<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tab4.mysetting.MySettingActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divide">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/stand_bg"
            android:orientation="vertical">

            <include layout="@layout/divide_15_top_bottom" />

            <com.ming.slove.mvnew.common.widgets.CustomItem
                android:id="@+id/click_my_purse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:itemIcon="@mipmap/tab4_my_purse"
                app:itemTitle="我的钱包" />

            <include layout="@layout/divide_15_top_bottom" />

            <com.ming.slove.mvnew.common.widgets.CustomItem
                android:id="@+id/click_my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:itemIcon="@mipmap/tab4_my_order"
                app:itemTitle="我的订单" />

            <include layout="@layout/divide_1_12" />

            <com.ming.slove.mvnew.common.widgets.CustomItem
                android:id="@+id/click_shopping_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:itemIcon="@mipmap/tab4_shipping_address"
                app:itemTitle="我的收货地址" />

            <include layout="@layout/divide_15_top_bottom" />

            <com.ming.slove.mvnew.common.widgets.CustomItem
                android:id="@+id/click_my_auction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:itemIcon="@mipmap/tab4_my_purse"
                app:itemTitle="我的拍卖" />

            <include layout="@layout/divide_15_top_bottom" />

            <com.ming.slove.mvnew.common.widgets.CustomItem
                android:id="@+id/click_my_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:itemContent="0分"
                app:itemIcon="@mipmap/tab4_identity_binding"
                app:itemTitle="我的信誉"
                app:showArrow="false" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>